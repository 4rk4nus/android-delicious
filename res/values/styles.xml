<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.SubtitleTextStyle" parent="android:TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
    </style>
    
	<style name="Widget.ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
		<item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
		<item name="android:background">@color/emphasis</item>
		<item name="android:subtitleTextStyle">@style/TextAppearance.SubtitleTextStyle</item>
	</style>

	<style name="Widget.ActionBar.AddBookmark" parent="Widget.ActionBar">
	    <item name="android:displayOptions">showTitle|showHome|homeAsUp</item>
		<item name="android:title">@string/activity_add_bookmark_title</item>
	</style>

	<style name="Theme.Delicious" parent="android:Theme.Holo.Light.DarkActionBar">
		<item name="android:actionBarStyle">@style/Widget.ActionBar</item>
	</style>
	
	<style name="Theme.Delicious.Main" parent="Theme.Delicious">
        <item name="android:actionBarStyle">@style/Widget.ActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_flyout_menu</item>
    </style>
	
	<style name="Theme.Delicious.AddBookmark" parent="Theme.Delicious">
		<item name="android:actionBarStyle">@style/Widget.ActionBar.AddBookmark</item>
	</style>
	
	<style name="sectionHeader" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawableBottom">@drawable/section_header</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/emphasis</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>
    
	<style name="editor" parent="android:Widget.Holo.Light.EditText">
	    <item name="android:minHeight">@dimen/editor_min_line_item_height</item>
	    <item name="android:layout_gravity">center_vertical</item>
	    <item name="android:layout_marginLeft">@dimen/editor_field_left_padding</item>
	    <item name="android:layout_marginRight">4dip</item>
	    <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	</style>

	<style name="flyoutItem" parent="android:Widget.Holo.TextView">
		<item name="android:background">?android:attr/selectableItemBackground</item>
		<item name="android:drawablePadding">8dip</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
		<item name="android:paddingBottom">4dip</item>
		<item name="android:paddingLeft">16dip</item>
		<item name="android:paddingRight">8dip</item>
		<item name="android:paddingTop">4dip</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
	</style>
</resources>
